<%- include("header") -%>
<link rel="stylesheet" href="body.css">

<%- include("../components/navbar") -%>

<body>
    <section>
        <div class="relative pt-6 pb-20 px-4 sm:px-6 lg:pt-12 lg:pb-28 lg:px-8">
            <div class="relative max-w-7xl mx-auto">
                <div class="text-center">
                    <h2 class="text-2xl tracking-tight font-extrabold text-gray-900 sm:text-3xl">
                        Ráfagas
                    </h2>
                    <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
                        Vuélvete más rápido respondiendo varios problemas de cualquier tipo. ¡Vamos!
                    </p>
                </div>
                <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none">
                    <%if (blasts != "") { %>
                    <%blasts.forEach(function(blast){%>
                    <a href="/blast?id=<%=blast._id%>">
                        <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
                            <div class="flex-1 bg-white p-6 flex flex-col justify-between">
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-indigo-600">
                                        <%=blast.id%>
                                    </p>
                                    <span class="block mt-2">
                                        <p class="text-xl font-semibold text-gray-900">
                                            <%=blast.name%>
                                        </p>
                                        <p class="mt-3 text-base text-gray-500">
                                            <span class="font-bold">Tema:</span>
                                            <%=blast.topic%>
                                        </p>
                                        <p class="mt-3 text-base text-gray-500">
                                            <%=blast.description%>
                                        </p>
                                    </span>
                                </div>
                                <div class="mt-6 flex items-center">
                                    <%if (blast.difficulty === "Fácil") { %>
                                    <span
                                        class="inline-flex items-center rounded-md text-sm font-medium bg-green-600 text-green-100 mr-2"
                                        style="padding: 0px 15px;">
                                        <%=blast.difficulty%>
                                    </span>
                                    <%} else if (problem.difficulty === "Media") {%>
                                    <span
                                        class="inline-flex items-center rounded-md text-sm font-medium bg-yellow-600 text-yellow-100 mr-2"
                                        style="padding: 0px 15px;">
                                        <%=blast.difficulty%>
                                    </span>
                                    <%} else {%>
                                    <span
                                        class="inline-flex items-center rounded-md text-sm font-medium bg-red-600 text-red-100 mr-2"
                                        style="padding: 0px 15px;">
                                        <%=blast.difficulty%>
                                    </span>
                                    <%}%>
                                <!-- <span
                                    class="inline-flex items-center rounded-md text-sm font-medium bg-blue-600 text-blue-100"
                                    style="padding: 0px 15px;">
                                    Contestado
                                </span> -->
                                </div>
                            </div>
                        </div>
                    </a>
                   
                    <%});%>
                                    <%} else {%>
                                    <p>¡Lo sentimos! No hay problemas disponibles.</p>
                                    <%}%>
                </div>
            </div>
        </div>
    </section>
</body>