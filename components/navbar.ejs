<script>

    let isOptionsOpen = false;
    function showOptions() {
        var options = document.getElementById("options");
        if (isOptionsOpen) {
            options.style.display = "none";
            isOptionsOpen = false;
        }
        else {
            options.style.display = "block";
            isOptionsOpen = true;
        }
    }

    let isBurgerMenuOpen = false;
    function showBurgerMenu() {
        var burgerMenu = document.getElementById("burger-menu");
        if (isBurgerMenuOpen) {
            burgerMenu.style.display = "none";
            isBurgerMenuOpen = false;
        }
        else {
            burgerMenu.style.display = "block";
            isBurgerMenuOpen = true;
        }
    }
    const tab = '<%- tab %>';
    const idTab = `.${tab}`;
    $(idTab).addClass('selected-tab');
    $(idTab).removeClass('focus:text-gray-700');
    $(idTab).removeClass('border-transparent');
    $(idTab).removeClass('text-gray-500');
    $(idTab).removeClass('hover:text-gray-700');
    $(idTab).removeClass('focus:border-gray-300');
    $(idTab).removeClass('hover:border-gray-300');

    $.get("/api/getImage", function (data) {
        if (data) {
            console.log(data);
            $('#profileImage').attr('src', data.img);
        }
    });

    var modal = document.getElementById("myModal"); // Get the modal
    var span = document.getElementsByClassName("close")[0]; // Get the <span> element that closes the modal

    function openModal() {
        modal.style.display = "block";
    }

    function closeModal() {
        modal.style.display = "none";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

</script>